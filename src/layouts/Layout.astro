---
import '../styles/reset.css';
import '../styles/customScrollbar.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Frontend Developer Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	@import '@fontsource/press-start-2p';

	:root {
		--primary: rgb(46, 213, 115);
		--secondary: rgba(46, 213, 116, 0.36);
		--secondary-light: #186338;
		--background: #0a0a0a;
		--text: #ddfbe8;
	}

	html {
		font-family: 'Press Start 2P', system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
	}

	body {
		margin: 0;
		/* padding: 20px; */
		min-height: 100vh;
	}

	.pixel-corners {
		clip-path: polygon(
			0 4px,
			4px 4px,
			4px 0,
			calc(100% - 4px) 0,
			calc(100% - 4px) 4px,
			100% 4px,
			100% calc(100% - 4px),
			calc(100% - 4px) calc(100% - 4px),
			calc(100% - 4px) 100%,
			4px 100%,
			4px calc(100% - 4px),
			0 calc(100% - 4px)
		);
	}

	.scanlines {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		background: repeating-linear-gradient(
			0deg,
			rgba(0, 0, 0, 0.2) 0px,
			rgba(0, 0, 0, 0.2) 1px,
			transparent 1px,
			transparent 2px
		);
		z-index: 999;
	}
</style>
