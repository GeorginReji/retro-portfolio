---
export interface Props {
	socialItems: {
		text: string;
		link: string;
		viewBox: string;
		d: string[];
	}[];
}

const { socialItems } = Astro.props;
---

<div class="tooltip-container">
	<div class="tooltip-content">
		<div class="tooltip-social-icons">
			{
				socialItems.map((item) => (
					<a href={item.link} class="tooltip-social-icon">
						<svg viewBox={item.viewBox} width="24" height="24">
							{item.d.map((d) => (
								<path d={d} />
							))}
						</svg>
					</a>
				))
			}
		</div>
	</div>
	<div class="button-content">
		<svg
			class="share-icon"
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 24 24"
			width="24"
			height="24"
		>
			<path
				d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92s2.92-1.31 2.92-2.92c0-1.61-1.31-2.92-2.92-2.92zM18 4c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zM6 13c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1zm12 7.02c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1z"
			></path>
		</svg>
	</div>
</div>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const socialButton = document.querySelector('.button-content');
		const tooltipContent = document.querySelector(
			'.tooltip-content'
		) as HTMLElement;
		const tooltipContainer = document.querySelector('.tooltip-container');

		if (socialButton && tooltipContent && tooltipContainer) {
			let isManuallyOpened = false;

			socialButton.addEventListener('click', (event) => {
				event.stopPropagation();
				isManuallyOpened = !isManuallyOpened;

				tooltipContent.style.opacity = isManuallyOpened ? '1' : '0';
				tooltipContent.style.visibility = isManuallyOpened
					? 'visible'
					: 'hidden';
			});

			// Close tooltip when clicking outside
			document.addEventListener('click', (event) => {
				if (
					isManuallyOpened &&
					!tooltipContainer.contains(event.target as Node)
				) {
					isManuallyOpened = false;
					tooltipContent.style.opacity = '0';
					tooltipContent.style.visibility = 'hidden';
				}
			});

			// Prevent hover from interfering with manual toggle
			tooltipContainer.addEventListener('mouseenter', (event) => {
				if (!isManuallyOpened) {
					tooltipContent.style.opacity = '1';
					tooltipContent.style.visibility = 'visible';
				}
			});

			tooltipContainer.addEventListener('mouseleave', (event) => {
				if (!isManuallyOpened) {
					tooltipContent.style.opacity = '0';
					tooltipContent.style.visibility = 'hidden';
				}
			});
		}
	});
</script>

<style>
	/* Custom share button CSS start */
	/* Container Styles */
	.tooltip-container {
		position: relative;
		display: inline-block;
		font-family: 'Arial', sans-serif;
		overflow: visible;
		z-index: 1001;
	}

	/* Button Styles */
	.button-content {
		--main-color: rgb(46, 213, 115);
		--main-bg-color: rgba(46, 213, 116, 0.36);
		--pattern-color: rgba(46, 213, 116, 0.073);
		filter: hue-rotate(0deg);

		display: flex;
		align-items: center;
		justify-content: center;
		background: radial-gradient(
				circle,
				var(--main-bg-color) 0%,
				rgba(0, 0, 0, 0) 95%
			),
			linear-gradient(var(--pattern-color) 1px, transparent 1px),
			linear-gradient(to right, var(--pattern-color) 1px, transparent 1px);

		border: 1px solid var(--main-bg-color);
		color: var(--main-color);
		padding: 1rem 3rem;
		transition: background-size 0.2s ease-in-out;
		border-radius: 50px;
		cursor: pointer;
		position: relative;
		z-index: 10;
		overflow: hidden;
	}

	.button-content::before {
		content: '';
		position: absolute;
		inset: 0;
		border-radius: inherit;
		background: linear-gradient(135deg, var(--primary), var(--secondary));
		filter: blur(15px);
		opacity: 0;
		transition: opacity 0.5s ease;
		z-index: -1;
	}

	.button-content::after {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		transform: scale(0);
		transition: transform 0.6s ease-out;
		z-index: -1;
	}

	.button-content:hover::before {
		opacity: 1;
	}

	.button-content:hover::after {
		transform: scale(1);
	}

	.button-content:active {
		filter: hue-rotate(250deg);
	}

	.text {
		font-size: 18px;
		font-weight: 600;
		margin-right: 12px;
		white-space: nowrap;
		text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
		transition: letter-spacing 0.3s ease;
	}

	.button-content:hover .text {
		letter-spacing: 1px;
	}

	.share-icon {
		fill: var(--text);
		transition:
			transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55),
			fill 0.3s ease;
		filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
	}

	.button-content:hover .share-icon {
		transform: rotate(180deg) scale(1.1);
		fill: var(--text);
	}

	/* Tooltip Styles */
	.tooltip-content {
		position: absolute;
		bottom: 100%;
		left: 50%;
		transform: translateX(-50%) scale(0.8);
		background: white;
		border-radius: 15px;
		padding: 1rem;
		box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
		opacity: 0;
		visibility: hidden;
		transition:
			opacity 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55),
			transform 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55),
			visibility 0.5s ease;
		z-index: 1001;
		pointer-events: none;
		backdrop-filter: blur(10px);
		background: rgba(255, 255, 255, 0.9);
	}

	.tooltip-container:hover .tooltip-content {
		opacity: 1;
		visibility: visible;
		pointer-events: auto;
	}
	/* Social Icons Styles */
	.tooltip-social-icons {
		display: flex;
		justify-content: flex-start;
		gap: 12px;
	}

	.tooltip-social-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 4rem;
		height: 4rem;
		border-radius: 50%;
		background: #f0f0f0;
		transition:
			transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55),
			background 0.3s ease,
			box-shadow 0.4s ease;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		position: relative;
		overflow: hidden;
	}

	.tooltip-social-icon::before {
		content: '';
		position: absolute;
		inset: 0;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.tooltip-social-icon:hover::before {
		opacity: 1;
	}

	.tooltip-social-icon svg {
		width: 24px;
		height: 24px;
		fill: #333;
		transition:
			transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55),
			fill 0.3s ease;
		z-index: 1;
	}

	.tooltip-social-icon:hover {
		transform: translateY(-5px) scale(1.1);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
	}

	.tooltip-social-icon:active {
		transform: translateY(-2px) scale(1.05);
		box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
	}

	.tooltip-social-icon:hover svg {
		transform: scale(1.2);
		fill: var(--primary);
	}

	.tooltip-social-icon :hover {
		color: var(--primary);
	}

	/* Animation for Pulse Effect */
	@keyframes pulse {
		0% {
			box-shadow: 0 0 0 0 var(--secondary);
		}
		70% {
			box-shadow: 0 0 0 20px rgba(110, 142, 251, 0);
		}
		100% {
			box-shadow: 0 0 0 0 rgba(110, 142, 251, 0);
		}
	}

	.button-content {
		animation: pulse 3s infinite;
	}

	/* Hover Ripple Effect */
	@keyframes ripple {
		0% {
			transform: scale(0);
			opacity: 1;
		}
		100% {
			transform: scale(4);
			opacity: 0;
		}
	}

	.button-content::before {
		content: '';
		position: absolute;
		inset: 0;
		background: rgba(255, 255, 255, 0.3);
		border-radius: inherit;
		transform: scale(0);
		opacity: 0;
	}

	.button-content:active::before {
		animation: ripple 0.6s linear;
	}

	/* Tooltip Arrow */
	.tooltip-content::before {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%) rotate(180deg);
		border-width: 0 10px 10px 10px;
		border-style: solid;
		border-color: transparent transparent rgba(255, 255, 255, 0.9)
			transparent;
		filter: drop-shadow(0 -3px 3px rgba(0, 0, 0, 0.1));
	}

	/* Accessibility */
	.button-content:focus {
		outline: none;
		box-shadow:
			0 0 0 3px var(--primary),
			0 8px 15px rgba(0, 0, 0, 0.1);
	}

	.button-content:focus:not(:focus-visible) {
		box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.button-content {
			padding: 12px 24px;
			border-radius: 40px;
		}

		.text {
			font-size: 16px;
		}
		.tooltip-content {
			padding-right: 2rem;
		}
		.tooltip-social-icon {
			width: 2.5rem;
			height: 2.5rem;
		}

		.tooltip-social-icon svg {
			width: 20px;
			height: 20px;
		}
	}

	@media (max-width: 480px) {
		.button-content {
			padding: 10px 20px;
		}

		.text {
			font-size: 14px;
		}

		.tooltip-content {
			width: 220px;
			padding: 1rem 2.5rem 1rem 1.5rem;
		}

		.tooltip-social-icon {
			width: 2.2rem;
			height: 2.1rem;
		}

		.tooltip-social-icon svg {
			width: 1.2rem;
			height: 1.2rem;
		}
	}

	/* Dark Mode Support */
	@media (prefers-color-scheme: dark) {
		.tooltip-content {
			background: rgba(30, 30, 30, 0.9);
			color: white;
		}

		.tooltip-content::before {
			border-color: transparent transparent rgba(30, 30, 30, 0.9)
				transparent;
		}

		.tooltip-social-icon {
			background: #2a2a2a;
		}

		.tooltip-social-icon svg {
			fill: #e0e0e0;
		}
	}

	/* Print Styles */
	@media print {
		.tooltip-container {
			display: none;
		}
	}

	/* Reduced Motion */
	@media (prefers-reduced-motion: reduce) {
		.button-content,
		.share-icon,
		.tooltip-social-icon,
		.tooltip-content {
			transition: none;
		}

		.button-content {
			animation: none;
		}
	}

	/* Custom Scrollbar for Tooltip Content */
	.tooltip-content::-webkit-scrollbar {
		width: 6px;
	}

	.tooltip-content::-webkit-scrollbar-track {
		background: #f1f1f1;
		border-radius: 3px;
	}

	.tooltip-content::-webkit-scrollbar-thumb {
		background: #888;
		border-radius: 3px;
	}

	.tooltip-content::-webkit-scrollbar-thumb:hover {
		background: #555;
	}
	/* Custom share button CSS end  */
</style>
